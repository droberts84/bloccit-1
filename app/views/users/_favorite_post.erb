<div class="media">
   <%= image_tag favorite_post.post.user.avatar_url(48), class: "gravatar pull-left" %>
  <%= render partial: 'votes/voter', locals: { post: favorite_post.post} %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to favorite_post.post.title, topic_post_path(favorite_post.post.topic, favorite_post.post) %>
      <%= render partial: "labels/list", locals: { labels: favorite_post.post.labels } %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(favorite_post.post.created_at) %> ago by <%= favorite_post.post.user.name %> <br>
      <%= favorite_post.post.comments.count %> Comments
    </small>
    </div>
</div>
