<h1>Create an Advertisement</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @advertisement do |ad| %>
      <div class="form-group">
        <%= ad.label :title %>
        <%= ad.text_field :title, class: "form-control", placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
        <%= ad.label :body %>
        <%= ad.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter Ad body" %>
      </div>
      <div class="form-group">
        <%= ad.label :price %>
        <%= ad.text_field :price, class: 'form-control', placeholder: "Enter Ad price" %>
      </div>
      <div class="form-group">
        <%= ad.submit "Save", class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>
